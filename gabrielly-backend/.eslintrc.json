{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "quotes": ["warn", "single"],
    "semi": ["warn", "always"],
    "indent": ["warn", 2]
  },
  "ignorePatterns": [
    "node_modules",
    "dist",
    "coverage",
    "LogFiles"
  ]
}
