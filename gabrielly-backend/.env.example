# ==================== DATABASE CONFIG ====================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=sua_senha_aqui
DB_NAME=e-commerce_semijoias

# ==================== API KEYS ====================
# OpenRouter (para chatbot)
OPENAI_API_KEY=sua_chave_openrouter_aqui

# Melhor Envio (para cálculo de frete)
# 1. Primeiro, configure CLIENT_ID e CLIENT_SECRET (obtidos em https://melhorenvio.com.br/painel/gerenciar/tokens)
MELHOR_ENVIO_CLIENT_ID=seu_client_id_aqui
MELHOR_ENVIO_CLIENT_SECRET=seu_client_secret_aqui

# 2. Depois, execute: node geraToken.js
# 3. Copie o token gerado e cole abaixo:
MELHOR_ENVIO_TOKEN=seu_token_gerado_aqui

# ==================== SERVER CONFIG ====================
PORT=5000
NODE_ENV=development

# ==================== CONFIGURAÇÕES DE FRETE ====================
# CEP de origem
ORIGIN_CEP=50000000